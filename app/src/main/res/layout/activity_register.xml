<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/login"
    android:padding="25dp">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="cursive"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColorHint="#676F97"
        android:textColor="#FFFFFF"
        android:minHeight="48dp"
        android:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#676F97"
        android:textColor="#FFFFFF"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_eye_close"
        android:hint="Password"
        android:textColorHint="#676F97"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spinnerRole"
        android:text="Role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:entries="@array/roles_array" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D4DA8"
        android:minHeight="50dp"
        android:text="Register"
        android:textColor="#182A33"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No account? Register here"
        android:textColor="#F56A76A9"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>