<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#35357C"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Teachers"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTeachers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etUserIdToDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Teacher ID"
            android:backgroundTint="#3D4DA8"
            android:textColorHint="#AAAAAA"
            android:textColor="#000000"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnDeleteTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Teacher"
            android:textColor="#E9E5E5"
            android:backgroundTint="#F44336"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</LinearLayout>